{
    "author": "Moacyr Catani, Jr.",
    "__name": "extensions-utility",
    "name": "@moacyr-catani/ct2-ts-extensions",
    "description": "A package to add util extensions to JavaScript basic types and objects ",
    "version": "1.0.19",
    "license": "MIT",
    "keywords": [],
    "homepage": "https://https://github.com/moacyr-catani/node-package-extensions#readme",
    "bugs": {
        "url": "https://github.com/moacyr-catani/node-package-extensions/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/moacyr-catani/node-package-extensions.git"
    },
    "type": "module",
    "exports": {


        ".": {
            "import": {
                "default": "./dist/esm/library/index.mjs",
                "types":   "./dist/esm/types/library/index.d.ts"
            },
            "require": {
                "default": "./dist/cjs/library/index.cjs",
                "types":   "./dist/cjs/types/library/index.d.ts"
            }
        },

        "./extensions": {
            "import": {
                "default": "./dist/esm/extensions/index.mjs",
                "types":   "./dist/esm/types/extensions/index.d.ts"
            },
            "require": {
                "default": "./dist/cjs/extensions/index.cjs",
                "types":   "./dist/cjs/types/extensions/index.d.ts"
            }
        },

        "./common": {
            "import": {
                "default": "./dist/esm/common/index.mjs",
                "types":   "./dist/esm/types/common/index.d.ts"
            },
            "require": {
                "default": "./dist/cjs/common/index.cjs",
                "types":   "./dist/cjs/types/common/index.d.ts"
            }
        },

        "./extensions/package.json": "./package.json"
    },
    "__main": "./lib/index.js",
    "__types": "./lib/types/index.d.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build":         "npm run clean && npm run build:esm && npm run build:cjs",
        "build:cjs":     "npm run build:cjs:lib && npm run build:cjs:ext",
        "build:esm":     "npm run build:esm:lib && npm run build:esm:ext",
        "build:cjs:ext": "tsc -p ./configs/tsconfig.cjs.extensions.json && shx mv dist/cjs/extensions/index.js dist/cjs/extensions/index.cjs",
        "build:cjs:lib": "tsc -p ./configs/tsconfig.cjs.library.json && shx mv dist/cjs/library/index.js dist/cjs/library/index.cjs",
        "build:esm:ext": "tsc -p ./configs/tsconfig.esm.extensions.json && shx mv dist/esm/extensions/index.js dist/esm/extensions/index.mjs",
        "build:esm:lib": "tsc -p ./configs/tsconfig.esm.library.json && shx mv dist/esm/library/index.js dist/esm/library/index.mjs",

        "build:esm2":  "tsc -p ./configs/tsconfig.esm.library.json",
        "build:local": "tsc -p ./configs/tsconfig.library.local.json",
        
        "clean":    "shx rm -rf ./dist",
        "docs":     "typedoc --options configs/typedoc.json",
        "examples": "npm run build:local && node ./dist/examples/index.js",
        "prepack":  "npm run build",
        
        "test":     "npm run test:lib && npm run test:ext",
        "test:lib": "jest --config=./configs/jest.config.library.ts",
        "test:ext": "jest --config=./configs/jest.config.extensions.ts",

        "test:cjs": "npm run --silent build && npm run --silent build:local && node ./tests/cjs/index.js",
        "test:esm": "npm run --silent build && npm run --silent build:local && node ./tests/esm/index.js"
    },
    "devDependencies": {
        "@inquirer/prompts": "^7.3.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "jest": "^30.2.0",
        "jsdoc": "^4.0.4",
        "shx": "^0.4.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typedoc": "^0.28.4",
        "typedoc-plugin-markdown": "^4.6.3",
        "typescript": "^5.9.3"
    }
}
